<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Box Icons -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <title> Módulo stock</title>
  </head>
  <body>
    <% if (fardo) { %>
    <div class="container mt-4">
        <h1> Actualizar Stock </h1>
            <div class="card border-secondary">  
                <div class="card-header">Editar Fardo Registrado</div>
                <div class="card-body">
                    <form action="/update" method="POST">
                        <input id="id" name="id" value="<%= fardo.id %>" hidden>
                        <div class="mb-3">
                          <label for="Nombre" class="form-label">Nombre</label>
                          <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" value="<%= fardo.nombre  %>">
                        </div>   
                        <div class="mb-3">
                          <label for="" class="form-label">Precio</label>
                          <input type="text" class="form-control" id="precio" name="precio" tabindex="1" value="<%= fardo.precio  %>">
                        </div> 
                        <div class="mb-3">
                          <label for="Nombre" class="form-label">Cantidad</label>
                          <input type="text" class="form-control" id="cantidad" name="cantidad" tabindex="1" value="<%= fardo.cantidad %>">
                        </div>  
                        <div class="mb-3">
                          <label for="rol" class="form-label">Categoría</label>
                          <select id="categoria" name="categoria" class="form-select"  value="" tabindex="2">
                            <option <%- fardo.categoria=='primera' ? "selected" : "" %> value="Primera">Primera</option>
                            <option <%- fardo.categoria=='segunda' ? "selected" : "" %> value="Segunda">Segunda</option>
                          </select>
                        </div>    
                        <div class="mb-3">
                          <label for="Nombre" class="form-label">Peso</label>
                          <input type="text" class="form-control" id="peso" name="peso" tabindex="1" value="<%= fardo.peso  %>">
                        </div>      
                        <div class="mb-3">
                          <label for="Nombre" class="form-label">Volumen</label>
                          <input type="text" class="form-control" id="volumen" name="volumen" tabindex="1" value="<%= fardo.volumen  %>">
                        </div>     
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/stock" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>        
    </div>
    <% } %>
  </body>
</html>
