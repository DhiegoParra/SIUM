<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <!-- Box Icons -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <title> Historial Finanzas</title>
    <style>
      .topnav input[type=text] {
          float: right;
          padding: 6px;
          border: none;
          margin-top: 8px;
          margin-right: 16px;
          margin-bottom: 8px;
          font-size: 17px;
      }
      .topnav a.active {
          background-color: #2196F3;
          color: white;
      }
      .topnav a:hover {
          background-color: #ddd;
          color: black;
      }
    </style>
  </head>
  <body>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <div class="container">
        <h1> Historial Finanzas</h1>
        <div class="topnav">
          <input type="text" placeholder="Filtrar">
        </div>
        <table id="record" class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="text-white" style="background-color:#017bab;">
                    <th scope="col">Fecha</th>           
                    <th scope="col">Ganacia de Hoy</th>
                    <th scope="col">Ganancia en el mes</th>
                    <th scope="col">Valor Actual de la Bodega</th>           
                </tr>
            </thead>
            <tbody>
                <% results.forEach((finanzas)=> { %>
                <tr>
                    <td> <%= finanzas.fecha %></td>
                    <td> <%= finanzas.gananciadiaria %></td>
                    <td> <%= finanzas.totalmensual  %></td>
                    <td> <%= finanzas.dinerofardo %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
      $(document).ready(function(){
            $('#record').DataTable();
        })
    </script>

  </body>
</html>
